<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ridenow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="inventslab.hacareemps_2.com.hacareem.views.RidenowActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:orientation="horizontal"
    android:layout_weight="0.5"
    android:weightSum="4"
    >
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical"

        >

        <Button
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:text="GO"
            android:layout_height="0dp"
            android:textColor="@color/colorMainBackground"
            android:id="@+id/id_btn_tab_go"
            />
        <TextView
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text = ""
            android:background="@color/colorMainBackground"
            android:id="@+id/id_tv_tab_go"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical"

        >

        <Button
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:text="GO+"
            android:layout_height="0dp"
            android:id="@+id/id_btn_tab_gop"
            android:textColor="@color/colorMainBackground"/>

        <TextView
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text = ""
            android:background="@color/colorMainBackground"
            android:id="@+id/id_tv_tab_gop"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical"
        >

        <Button
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:text="BUISNESS"
            android:layout_height="0dp"
            android:id="@+id/id_btn_tab_buisness"

            android:textColor="@color/colorMainBackground"/>
        <TextView
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text = ""
            android:background="@color/colorMainBackground"
            android:id="@+id/id_tv_tab_buisness"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical"

        >

        <Button
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:text="TEZZ"
            android:layout_height="0dp"
            android:textColor="@color/colorMainBackground"
            android:id="@+id/id_btn_tab_tezz"

            />
        <TextView
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text = ""
            android:background="@color/colorMainBackground"
            android:id="@+id/id_tv_tab_tezz"

            />
    </LinearLayout>

</LinearLayout>

   <LinearLayout
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <fragment
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            tools:context="inventslab.hacareemps_2.com.hacareem.views.RidenowActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ride Now"
            android:textColor="@color/colorMainBackground"
            android:background="@color/colorPrimary"
            android:id="@+id/btn_ridenow"
            />
</LinearLayout>
</LinearLayout>
